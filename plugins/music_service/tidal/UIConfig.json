{
  "page": {
    "label": "Tidal Plugin Configuration"
  },
  "sections": [
    {
      "id": "section_account",
      "element": "section",
      "label": "Tidal account",
      "icon": "fa-plug",
      "onSave": {
        "type": "controller",
        "endpoint": "music_service/tidal",
        "method": "saveAccount"
      },
      "saveButton": {
        "label": "Save",
        "data": [
          "username",
          "password",
          "token",
          "quality"
        ]
      },
      "content": [
        {
          "id": "username",
          "type": "text",
          "element": "input",
          "doc": "This is the username of your Tidal account",
          "label": "Username",
          "value": ""
        },
        {
          "id": "password",
          "type": "password",
          "element": "input",
          "doc": "This is the password of your Tidal account",
          "label": "Password",
          "value": ""
        },
        {
          "id": "token",
          "type": "text",
          "element": "input",
          "doc": "X-Tidal-Token",
          "label": "Token",
          "value": ""
        },
        {
          "id": "quality",
          "element": "select",
          "doc": "Quality",
          "label": "Sets the playback quality",
          "value": { "value": "HIGH", "label": "High"},
          "options": [
            {
              "value": "LOW",
              "label": "Standard"
            },
            {
              "value": "HIGH",
              "label": "High"
            },
            {
              "value": "LOSSLESS",
              "label": "HiFi"
            },
            {
              "value": "HIGH_RES",
              "label": "Master"
            }
          ]
        }
      ]
    }
  ]
}
